    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="sph.durga.rCard.HomeScreenActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="sph.durga.rCard.jobseeker.JobSeekerHomeActivity"></activity>
        <activity android:name="sph.durga.rCard.jobseeker.ReviewRcardActivity"></activity>
        <activity android:name="sph.durga.rCard.jobseeker.DisplayComapaniesActivity"></activity>
        
        <activity android:name="sph.durga.rCard.jobseeker.SendRcardActivity"></activity>
        
        <activity android:name="sph.durga.rCard.recruiter.RecruiterHomeActivity"></activity>
