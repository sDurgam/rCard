<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
>

    <Button
        android:id="@+id/rCardListBtn"
         android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_weight="0.4"
        android:background="#99CC32"
        android:textColor="#ffffff"
        android:textSize="22sp"
        android:text="@string/displayrcards"
       
        android:onClick="ListrCardsClick"/>

    <Button
        android:id="@+id/rCardClickBtn"
         android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_weight="0.4"
        android:background="#99CC32"
        android:textColor="#ffffff"
        android:textSize="22sp"
         android:layout_marginLeft="16sp"
        android:text="Receive rCard"
        android:onClick="receiverCardsClick" />

</LinearLayout>
