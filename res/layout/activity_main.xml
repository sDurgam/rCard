<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="sph.durga.rCard.MainActivity" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/home_msg"
        android:textSize="22sp" />

    <ListView
        android:id="@+id/filesList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.60"
        android:scrollbars="horizontal"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/chosenFileText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="22sp" />

    <Button
        android:id="@+id/sendResume"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="8sp"
        android:enabled="false"
        android:gravity="center"
        android:onClick="SendORDeleteButtonClicked"
        android:text="@string/send_bluetooth"
        android:textSize="16sp" />

    <!--
         <Button android:id="@+id/rfcsendResume" android:text="@string/send_bluetooth"
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content"
        android:layout_marginTop="8sp"
        android:textSize="16sp"
        android:layout_gravity="center"
        android:gravity="center"
        android:enabled="false"
        android:onClick="SendORDeleteButtonClicked"/>
    -->

</LinearLayout>